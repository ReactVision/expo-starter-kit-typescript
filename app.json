{
  "expo": {
    "name": "ViroReact Starter",
    "slug": "expo-starter-kit-typescript",
    "scheme": "expostarterkittypescript",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save photos",
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to use your camera",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use your microphone"
      },
      "bundleIdentifier": "com.anonymous.expo-starter-kit-typescript"
    },
    "android": {
        "adaptiveIcon": {
            "foregroundImage": "./assets/adaptive-icon.png",
            "backgroundColor": "#ffffff"
        },
        "edgeToEdgeEnabled": true,
        "predictiveBackGestureEnabled": false,
        "package": "com.anonymous.expostarterkittypescript"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "./plugins/enable-new-architecture",
      [
        "@reactvision/react-viro",
        {
          "android": {
            "xRMode": "AR"
          },
          "ios": {
        	  "cameraUsagePermission": "ViroReact Starter uses your camera for AR experiences.",
            "microphoneUsagePermission": "ViroReact Starter  uses your microphone for AR experiences.",
            "photosPermission": "ViroReact Starter  would like to read photos for AR experiences.",
            "savephotosPermission": "ViroReact Starter  would like to save photos to your library during AR experiences."
          }
        }
      ]
    ]
  }
}
